<template name="article-item-style-default">
<view style="border-bottom: 1px solid #ddd;">
	<navigator url="/pages/detail/index?id={{id}}">
    	<image style="height: 150px;" src="http://img.csi0n.com{{thumb}}" mode="aspectFill"></image>
	    <view style="padding: 11px;">
	        <text style="display: block;font-size: 15px;font-weight: bold;">{{title}}</text>
	        <text style="display: block;font-size: 12px;color: gray;">{{describe}}</text>
	    </view>
    </navigator>
</view>
</template>